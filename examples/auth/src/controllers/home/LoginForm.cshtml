
<form method="POST" asp-action="Login">
    <div asp-validation-summary="All"></div>
    <div class="field">
        <label for="Name">Идентификатор</label>
        <input name="Name"/>
    </div>
    <div class="field">
        <label for="Password">Пароль</label>
        <input type="password" name="Password"/>
    </div>
    <button type="submit">Вход</button>
</form>